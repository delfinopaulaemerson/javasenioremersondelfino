<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee       
 http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <navigation-rule>
  <navigation-case>
   <from-outcome>login</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>sucessoLogin</from-outcome>
   <to-view-id>/begin/begin.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>cadastroEmpregado</from-outcome>
   <to-view-id>/empregado/cadastro.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>edicaoEmpregado</from-outcome>
   <to-view-id>/empregado/edicao.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>cadastroDepartamento</from-outcome>
   <to-view-id>/departamento/cadastro.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>edicaoDepartamento</from-outcome>
   <to-view-id>/departamento/edicao.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <application>
  <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
 </application>
 <application>
  <resource-bundle>
	<base-name>br.com.mobicare.properties.messages</base-name>
	<var>msg</var>
   </resource-bundle>
    </application>
</faces-config>
